<h1>Images<h1>

<% if @images.count < 2 %>
  <h4>You have no images<h4>
<% end %>

<% @images.each_with_index do |image, index| %>
  <% debugger %>
  <% next if index == 0 %>
  <h2>
    <a href="/images/<%= image.id %>"><%= image[:title] %></a>
  </h2>
  <p>
    <img src="<%= image[:url] %>" width="40"/>
  </p>
  <blockquote>
    <%= image[:description] %>
  </blockquote>
<% end %>

<h2>Store a new image</h2>
 