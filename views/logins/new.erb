<div class="row">
  <div class="large-6 columns">
    <form action="<%= new_session_path %>" method="post">
      <fieldset>
        <legend>Restricted</legend>
        <label for="username">
          Username
          <input autofocus="<%= true %>" name="user[username]" required="<%= true %>" type="text"></input>
        </label>
        <label for="password">
          Password
          <input autofocus="<%= true %>" name="user[passoword]" required="<%= true %>" type="password"></input>
        </label>
      </fieldset>
      <button class="button small radius">Log In</botton>
    </form>
  </div>
</div>

<% content_for :js do %>
  <script type='text/javascript'>

    $('#logout-link').hide();

  </script>
<% end %>
